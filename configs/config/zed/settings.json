// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "format_on_save": "on",
  "audio": {
    "experimental.auto_microphone_volume": true,
    "experimental.rodio_audio": true
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_menus": true
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "context_servers": {
    "notion": {
      "enabled": false,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.notion.com/mcp"],
      "env": {}
    },
    "mcp-server-github": {
      "enabled": true,
      "settings": {
        // "github_personal_access_token": "REDACTED" // Socket
        "github_personal_access_token": "REDACTED" // Personal
      }
    },
    "socketdocs": {
      "enabled": false,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://docs.socket.dev/mcp"],
      "env": {}
    },
    "linear": {
      "enabled": false,
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/sse"],
      "env": {}
    },
    "sentry": {
      "enabled": false,
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.sentry.dev/sse",
        "--transport",
        "sse-only"
      ],
      "env": {}
    },
    "mcp-server-brave-search": {
      "settings": {
        "brave_api_key": "REDACTED"
      }
    },
    "postgres-context-server": {
      "enabled": true,
      "settings": {
        "database_url": "REDACTED"
      }
    }
  },
  "ensure_final_newline_on_save": true,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "minimap": {
    "show": "auto",
    "thumb": "always",
    "thumb_border": "full",
    "current_line_highlight": "all"
  },
  "agent": {
    "default_profile": "write",
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "languages": {
    "Markdown": {
      "show_edit_predictions": false,
      "format_on_save": "off",
      "soft_wrap": "editor_width",
      "wrap_guides": [80]
    },
    "JavaScript": {
      // "language_servers": ["eslint", "..."],
      "formatter": [],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      // "language_servers": ["eslint", "..."],
      "formatter": [],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "theme": {
    "mode": "system",
    "light": "Tron Legacy Light",
    "dark": "Tron Legacy"
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "indent_guides": {
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware"
    // "background_coloring": "indent_aware"
  },
  "tab_size": 2,
  "terminal": {
    "option_as_meta": true
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "buffer_font_family": "SF Mono",
  "telemetry": {
    "metrics": true,
    "diagnostics": true
  },
  "ui_font_size": 16,
  "lsp": {
    "jsonnet-language-server": {
      "settings": {
        "resolve_paths_with_tanka": true
      }
    }
  }
}
